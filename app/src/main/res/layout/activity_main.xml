<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="se.frost.chromecustomtabsexample.MainActivity">

    <Button
        android:id="@+id/frostButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:onClick="openFrostTab"
        android:text="@string/frost_button"/>

    <Button
        android:id="@+id/rebtelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:onClick="openRebtelTab"
        app:layout_constraintTop_toBottomOf="@+id/frostButton"
        android:textColor="@android:color/white"
        android:text="@string/rebtel_button"/>


</android.support.constraint.ConstraintLayout>
